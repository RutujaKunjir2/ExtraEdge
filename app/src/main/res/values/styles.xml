<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/sf_compact_text_medium</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CardStyle">
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">32dp</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">12dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

</resources>
